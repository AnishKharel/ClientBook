<Page x:Class="ClientBook.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="564" d:DesignWidth="1050"
      Title="SearchPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Margin="40,0" FontSize="45">Search by</TextBlock>
            <ComboBox Margin="40,0" FontSize ="30" Width="140">
                <ComboBoxItem IsSelected="True" FontSize="30">Name</ComboBoxItem>
                <ComboBoxItem FontSize="30">Address</ComboBoxItem>
                
            </ComboBox>
        </WrapPanel>



    </Grid>
</Page>